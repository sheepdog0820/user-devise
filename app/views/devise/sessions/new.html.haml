#account-page.account-page
  .account-page__inner.clearfix.user-form
    %h1.user-head ログイン
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        .field-label
          = f.label :email
        .field-input
          = f.email_field :email, autofocus: true
      .field
        .field-label
          = f.label :password
          %br/
          %i (英数字8文字以上)
        .field-input
          = f.password_field :password, autocomplete: "off"
      .actions
        = f.submit "ログイン", class: 'btn'
  .account-page__sing-up      
    = link_to "初めてご利用になる方", new_registration_path(resource_name), class: 'sing-up'