#account-page.account-page
  .account-page__inner.clearfix.user-form
    %h1.user-head 会員登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field
        .field-label
          = f.label :name
        .field-input
          = f.text_field :name, autofocus: true
      .field
        .field-label
          = f.label :email
        .field-input
          = f.email_field :email
      .field
        .field-label
          = f.label :password
          %br/
          %i (英数字8文字以上)
        .field-input
          = f.password_field :password, autocomplete: "off"
      .field
        .field-label
          = f.label :password_confirmation
        .field-input
          = f.password_field :password_confirmation, autocomplete: "off"
      .field
        .field-label-birthdate
          = f.label :生年月日
        .field-input-birthdate
          = f.date_select :birth_date, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1)
      .actions
        = f.submit "登録", class: 'btn'
  .account-page__note
    %h2 
      フリマの利用規約とプライバシーポリシーをお読みいただき、
      %br/
      同意のうえ「登録」ボタンを押してください。
  .account-page__sin
    = link_to "既存IDをお持ちの方はこちら(ログイン)", new_session_path(resource_name), class: 'login'
