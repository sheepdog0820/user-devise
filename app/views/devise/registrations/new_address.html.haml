#address-page.account-page
  .address-page__inner.clearfix.user-form
    %h1.user-head 住所登録
    = form_for(@address) do |f|
      = render "devise/shared/error_messages", resource: @address
      .field
        -# %p　お名前（漢字）
        .field-label
          = f.label :姓（漢字）
        .field-nonull
          %p 必須
        .field-input
          = f.text_field :family_name, class: "name"
      .field
        .field-label
          = f.label :名（漢字）
        .field-nonull
          %p 必須
        .field-input
          = f.text_field :first＿name, class: "name"
      .field
        .field-label
          = f.label :姓（カナ）
        .field-nonull
          %p 必須
        .field-input
          = f.text_field :family_name_kana
      .field
        .field-label
          = f.label :名（カナ）
        .field-nonull
          %p 必須
        .field-input
          = f.text_field :first_name_kana
      .field
        .field-label
          = f.label :電話番号
        .field-nonull
          %p 必須
        .field-input
          = f.telephone_field	 :tel
      .field
        .field-label
          = f.label :都道府県
        .field-nonull
          %p 必須
        .field-input
          = f.collection_select :prefecture, Prefecture.all, :id, :name
      .field
        .field-label
          = f.label :郵便番号
        .field-nonull
          %p 必須
        .field-input
          = f.number_field :zip_code
      .field
        .field-label
          = f.label :市区町村
        .field-nonull
          %p 必須
        .field-input
          = f.text_field :municipality
      .field
        .field-label
          = f.label :番地
        .field-nonull
          %p 必須
        .field-input
          = f.text_field :address
      .field
        .field-label
          = f.label :建物名
        .field-nonull
          %p 必須
        .field-input
          = f.text_field :building_name
      .actions
        = f.submit "登録", class: 'btn'
  .account-page__note
    %h2 
      フリマの利用規約とプライバシーポリシーをお読みいただき、
      %br/
      同意のうえ「登録」ボタンを押してください。
  .account-page__sin
    = link_to "既存IDをお持ちの方はこちら(ログイン)", new_session_path(resource_name), class: 'login'
